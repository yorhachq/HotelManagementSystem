<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chq.hms.mapper.SysUserMapper">
    <resultMap id="BaseResultMap" type="com.chq.hms.domain.SysUser">
        <id column="user_id" property="userId"/>
        <result column="username" property="username"/>
        <result column="password" property="password"/>
        <result column="gender" property="gender"/>
        <result column="email" property="email"/>
        <result column="phone" property="phone"/>
        <result column="avatar" property="avatar"/>
        <result column="role_id" property="roleId"/>
        <result column="status" property="status"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <insert id="insertSysUser" parameterType="com.chq.hms.domain.SysUser">
        INSERT INTO sys_user (username, password, gender, email, phone, avatar, role_id, status, create_time,
                              update_time)
        VALUES (#{username}, #{password}, #{gender}, #{email}, #{phone}, #{avatar}, #{roleId}, #{status}, NOW(), NOW())
    </insert>

    <update id="updateSysUser" parameterType="com.chq.hms.domain.SysUser">
        UPDATE sys_user
        <set>
            <if test="username != null">
                username = #{username},
            </if>
            <if test="password != null">
                password = #{password},
            </if>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="avatar != null">
                avatar = #{avatar},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            update_time = NOW()
        </set>
        WHERE user_id = #{userId}
    </update>

    <select id="selectSysUserById" resultMap="BaseResultMap">
        SELECT * FROM sys_user WHERE user_id = #{userId}
    </select>

    <update id="update" parameterType="com.chq.hms.domain.SysUser">
        UPDATE sys_user
        <set>
            <if test="gender != null">
                gender = #{gender},
            </if>
            <if test="email != null">
                email = #{email},
            </if>
            <if test="phone != null">
                phone = #{phone},
            </if>
            <if test="roleId != null">
                role_id = #{roleId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
            update_time = NOW()
        </set>
        WHERE user_id = #{userId}
    </update>

</mapper>
